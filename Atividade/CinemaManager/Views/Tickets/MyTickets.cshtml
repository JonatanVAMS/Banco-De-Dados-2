@model IEnumerable<CinemaManager.Models.Ticket>
@{
    ViewData["Title"] = "Histórico de Compras";
}

<h1><i class="bi bi-clock-history"></i> Meus Ingressos</h1>
<hr />

@if (!Model.Any())
{
    <div class="alert alert-info">Você ainda não realizou nenhuma compra.</div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Ver Filmes em Cartaz</a>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover table-dark">
            <thead>
                <tr>
                    <th>Filme</th>
                    <th>Data da Sessão</th>
                    <th>Assento</th>
                    <th>Valor</th>
                    <th>Comprado em</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ticket in Model)
                {
                    <tr>
                        <td class="fw-bold text-danger">@ticket.Session.Movie.Title</td>
                        <td>@ticket.Session.ScheduledTime.ToString("dd/MM/yyyy HH:mm")</td>
                        <td><span class="badge bg-secondary">@ticket.SeatNumber</span></td>
                        <td>@ticket.Session.Price.ToString("C")</td>
                        <td>@ticket.PurchaseDate.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a asp-action="Receipt" asp-route-id="@ticket.Id" class="btn btn-sm btn-outline-light">
                                <i class="bi bi-eye"></i> Ver Ingresso
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}