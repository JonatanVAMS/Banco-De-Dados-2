@model IEnumerable<CinemaManager.Models.Room>

@{
    ViewData["Title"] = "Gerenciar Salas";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1><i class="bi bi-door-closed"></i> Gerenciar Salas</h1>
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Adicionar Sala</a>
</div>

<table class="table table-striped table-hover shadow-sm bg-white rounded">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeatCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SeatCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil"></i></a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info"><i class="bi bi-search"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>