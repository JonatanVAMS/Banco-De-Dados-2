@model CinemaManager.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<style>
    .dashboard-card .card-title-success {
        color: #198754;
        font-weight: bold;
    }

    .dashboard-card .card-title-info {
        color: #0dcaf0;
        font-weight: bold;
    }

    .dashboard-card .card-title-primary {
        color: #0d6efd;
        font-weight: bold;
    }

    .dashboard-card .card-title-warning {
        color: #ffc107;
        font-weight: bold;
    }

    .dashboard-card .card-icon {
        color: var(--cor-borda); 
        font-size: 2.5rem; 
        opacity: 0.7;
    }

    .dashboard-card .card-value {
        color: var(--cor-texto-principal); 
        font-size: 2rem;
        font-weight: 700;
    }
</style>

@if (User.IsInRole("Admin"))
{
    <div class="text-center mb-4">
        <h1 class="display-4">Dashboard do Administrador</h1>
    </div>

    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card shadow h-100 py-2 dashboard-card border-left-success">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs text-uppercase mb-1 card-title-success">Vendas (Hoje)</div>
                            <div class="card-value">@Model.SalesToday.ToString("C")</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-cash-stack card-icon"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card shadow h-100 py-2 dashboard-card border-left-info">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs text-uppercase mb-1 card-title-info">Ingressos (Hoje)</div>
                            <div class="card-value">@Model.TicketsSoldToday</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-ticket-detailed card-icon"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card shadow h-100 py-2 dashboard-card border-left-primary">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs text-uppercase mb-1 card-title-primary">Sessões Ativas</div>
                            <div class="card-value">@Model.ActiveSessions</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-calendar-event card-icon"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card shadow h-100 py-2 dashboard-card border-left-warning">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs text-uppercase mb-1 card-title-warning">Filmes Cadastrados</div>
                            <div class="card-value">@Model.TotalMovies</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-film card-icon"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="text-center">
        <h1 class="display-4">Bem-vindo ao Cine Simbiose</h1>
        <p>Use o menu acima para navegar.</p>
    </div>
}