@model CinemaManager.Models.Movie

@{
    ViewData["Title"] = "Detalhes do Filme";
}

<h1>Detalhes do Filme</h1>

<div>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <img src="@(string.IsNullOrEmpty(Model.PosterUrl) ? "https://via.placeholder.com/300x450.png?text=Sem+Cartaz" : Model.PosterUrl)"
                 class="img-fluid rounded" alt="@Model.Title">
        </div>
        <div class="col-md-8">
            <h3>@Html.DisplayFor(model => model.Title)</h3>
            <p>@Html.DisplayFor(model => model.Description)</p>
            <dl class="row">
                <dt class="col-sm-3">Duração</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DurationMinutes) minutos</dd>

                <dt class="col-sm-3">Classificação</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Rating)</dd>

                <dt class="col-sm-3">Gênero</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Genre)</dd>
            </dl>
        </div>
    </div>

</div>
<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a> |
    <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
</div>